<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <span class="nav-left">
        <div class="navbar-brand"><%= link_to "Idea Factory", ideas_path%></div>
      </span>

      <span class="nav justify-content-end">
        <div class="nav-item"><% if user_signed_in? %>
        Hello <%= link_to current_user.full_name %>,
        <%= link_to "Logout", session_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}%>
        <% else %>
          <%= link_to "Login", new_session_path %> |
          <%= link_to "Sign Up", new_user_path %>
        <% end %></div>
        <div class="nav-item"><%= link_to "New Idea", new_idea_path %></div>
      </span>
    </nav>

 
    
    <% flash[:notice] || flash[:alert] %>
    <%= yield %>
  </body>
</html>
